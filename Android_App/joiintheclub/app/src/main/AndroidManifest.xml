<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.joiintheclub">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".FrontEnd.Group.vote"></activity>
        <activity
            android:name=".FrontEnd.Group.cardView"
            android:label="@string/title_activity_card_view" />
        <activity
            android:name=".FrontEnd.Init.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".FrontEnd.SearchGroup.SearchMain"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:label="@string/search" />
        <activity
            android:name=".FrontEnd.UserProfile.UserProfileMain"
            android:label="@string/title_activity_user_profile_main" />
        <activity
            android:name=".FrontEnd.Setting.SettingMain"
            android:label="@string/title_activity_setting_main" />
        <activity
            android:name=".FrontEnd.Group.GroupMain"
            android:label="@string/title_activity_group_main" />
        <activity
            android:name=".FrontEnd.Init.CreateAcount"
            android:label="@string/title_activity_create_acount" />
        <activity android:name=".FrontEnd.Init.LoadScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FrontEnd.Group.GroupDetail" />
    </application>

</manifest>